<% layout("/layouts/boilerplate") %>

 
<!-- <h2>All listings</h2> -->

<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter hide-on-xs">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter hide-on-xs">
    <div><i class="fa-duotone fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter hide-on-sm">
    <div><i class="fab fa-fort-awesome"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter hide-on-sm">
    <div><i class="fas fa-snowboarding"></i></div>
    <p>Artic</p>
  </div>
  <div class="filter hide-on-sm">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>camping</p>
  </div>
  <div class="filter hide-on-sm">
    <div><i class="fas fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter hide-on-md">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </div>
  <div class="filter hide-on-md">
    <div><i class="fas fa-umbrella-beach"></i></div>
    <p>Beaches</p>
  </div>
  <div class="filter hide-on-lg">
    <div><i class="fa-solid fa-hotel"></i></div>
    <p>Hotels</p>
  </div>
  <div class="filter hide-on-lg">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for (list of allListings){ %>
  <a href="/listings/<%= list._id %>" class="listing-link" style="width: 20rem">
    <div class="card listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="..."
        style="height: 18rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b><br />
          &#8377;<%= list.price.toLocaleString("en-IN") %>
          <i class="tax-info">&nbsp;&nbsp; 18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <%}%>
</div>
<script>

</script>
